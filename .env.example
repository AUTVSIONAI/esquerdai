# Frontend Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
# For development, use: http://localhost:5120/api (proxied as /api)
# For production, use: https://esquerdai-backend.vercel.app/api
VITE_API_URL=https://esquerdai-backend.vercel.app/api

# Supabase Configuration (Frontend)
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Mapbox Configuration
# Public token from Mapbox account
VITE_MAPBOX_TOKEN=your_mapbox_public_token_here

# Stripe Configuration (Optional - only if using Stripe.js)
# Use your Stripe publishable key (starts with pk_)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Application Branding
VITE_APP_NAME=Esquerdai
VITE_APP_DOMAIN=esquerdai.com
VITE_APP_TAGLINE="Central da Esquerda"
VITE_SUPPORT_EMAIL=support@esquerdai.com
VITE_CONTACT_EMAIL=contact@esquerdai.com
VITE_ADMIN_EMAIL=admin@esquerdai.com

# Development Flags (Optional)
VITE_DEV_MODE=false
VITE_DEBUG=false

# Analytics (Optional)
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
# VITE_SENTRY_DSN=your_sentry_dsn_here

